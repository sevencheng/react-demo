{
    "compilerOptions": {
        "moduleResolution": "node",
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "allowJs": false,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "removeComments": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "downlevelIteration": true,
        "lib": ["es6", "dom", "scripthost"],
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "useCache": true,
        "useTranspileModule": true,
        "forkChecker": true,
        "useWebpackText": true,
        "transpileOnly": true
    }
}